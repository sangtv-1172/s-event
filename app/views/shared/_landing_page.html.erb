<div>
  <section class="fixed-top navigation fs-5">
    <nav class="container row justify-content-between navbar navbar-expand-lg navbar-light">
      <div class="fs-1 fw-bold ms-5 col-3">
        <%= image_tag "s-event-logo.png", style:"width: 45px" %>
        <%= link_to "S-event", root_path, class: "navbar-brand text-logo" %>
      </div>
      <div class="collapse navbar-collapse text-center" id="navbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "Home", root_path(anchor: :home),
              class: "nav-link #{"active" if controller_name.to_sym == :static_pages}", "aria-current": "page" %>
          </li>
          <li class="nav-item">
            <%= link_to "About", root_path(anchor: :about_us), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Connect", root_path(anchor: :footer), class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Forgot your password?", new_password_path(resource_name),
              class: "nav-link #{"active" if controller_name.to_sym == :passwords }" %>
          </li>
          <li class="nav-item">
            <%= link_to "Account Verification", new_confirmation_path(resource_name),
              class: "nav-link #{"active" if controller_name.to_sym == :confirmations }" %>
          </li>
        </ul>
      </div>
    </nav>
  </section>
  <section id="home">
    <div class="col-12 min-vh-100 p-5 bg-page mb-5" style="background-image: url(<%= asset_path "banner-bg.png" %>)">
      <div class="container p-5">
        <div class="row">
          <div class="row col-lg-12 text-center">
            <h1 class="mb-3">
              Take Control of your
              <br>
              Event
            </h1>
            <p class="mb-4">
              Mark your life with the most wonderful events.
              <br>
              S-event always supports you
            </p>
            <div class="row justify-content-center">
            <%= link_to "Sign in", signin_users_path, remote: true,
              class: "btn-grad text-light fw-bold btn px-5 py-2 fs-6 btn-lg mb-5 col-2" %>
            <%= link_to "Sign up", signup_users_path, remote: true,
              class: "btn-grad text-light fw-bold btn px-5 py-2 fs-6 btn-lg mb-5 col-2" %>
            </div>
            <%= image_tag "banner.png", class: "img-fluid col-12" %>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="section feature my-5" id="about_us">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center my-5">
          <h2 class="section-title">Awesome Features</h2>
        </div>
        <div class="col-md-6 mb-5">
          <div class="d-flex feature-item shadow p-3 rounded-3">
            <div>
              <h4>Tạo lịch trình</h4>
              <p>Hỗ trợ tạo lịch trình và quản lý sự kiện</p>
            </div>
          </div>
        </div>
        <div class="col-md-6 mb-80">
          <div class="d-flex feature-item shadow p-3 rounded-3">
            <div>
              <h4>Chủ đề </h4>
              <p>Đa dạng với nhiều chủ đề sự kiện và sự kiện khácc nhau</p>
            </div>
          </div>
        </div>
        <div class="col-md-6 mb-80">
          <div class="d-flex feature-item shadow p-3 rounded-3">
            <div>
              <h4>Lịch trình</h4>
              <p>Lịch trình công việc trực quan</p>
            </div>
          </div>
        </div>
        <div class="col-md-6 mb-80">
          <div class="d-flex feature-item shadow p-3 rounded-3">
            <div>
              <h4>Thống kê</h4>
              <p>Báo cáo thống kê chi tiết</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<script>
  if ($('.navigation').offset().top > 10) {
    $('.navigation').addClass('nav-bg');
  } else {
    $('.navigation').removeClass('nav-bg');
  }
  $(window).scroll(function () {
    if ($('.navigation').offset().top > 10) {
      $('.navigation').addClass('nav-bg');
    } else {
      $('.navigation').removeClass('nav-bg');
    }
  });
</script>

