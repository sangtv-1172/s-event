<tr>
  <th scope="row"><%= link_to user.id, admin_user_path(user), class: "text-decoration-none text-primary fw-bold" %></th>
  <td><%= user.full_name %></td>
  <td><%= user.email %></td>
  <td><%= user.gender %></td>
  <td><%= user.date_of_birth %></td>
  <td><%= user.address %></td>
  <td><%= user.role %></td>
  <td>
    <% if user.online? %>
      <span class="badge bg-success">Online</span>
    <% else %>
      <span class="badge bg-secondary">Offline</span>
    <% end %>
  </td>
  <td>
    <% if user.confirmed_at %>
      <span class="badge bg-success">Confirmed</span>
    <% else %>
      <span class="badge bg-danger">Unconfimred</span>
    <% end %>
  </td>
  <td><%= time_ago_in_words user.last_sign_in_at if user.last_sign_in_at %></td>
  <td><%= parse_time user.created_at %></td>
  <td>
    <%= link_to admin_user_path(user), class: "text-decoration-none text-success fw-bold me-2" do %>
      <i class="fa-solid fa-eye"></i>
    <% end %>
    <%= link_to edit_admin_user_path(user), remote: true, class: "text-decoration-none text-primary fw-bold mx-2" do %>
      <i class="fa-solid fa-pen-to-square"></i>
    <% end %>
    <%= content_tag :span, onclick: "confirm_delete('#{admin_user_path user}')",
      class: "text-decoration-none text-danger fw-bold mx-2" do %>
      <i class="fa-solid fa-trash-can"></i>
    <% end %>
  </td>
</tr>
