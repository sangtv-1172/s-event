<% provide :title, "Collections event" %>
<div class="mb-4 row">
  <h2 class="col-8">
    Collections event
  </h2>
  <div class="col">
    <div class="float-end">
      <%= link_to "Create user", new_admin_user_path,
        class:"btn btn-primary mx-3", remote: true %>
    </div>
  </div>
</div>
<div class="my-3 overflow-auto">
  <table class="table table-striped table-hover shadow border">
    <thead>
      <tr>
        <th scope="col"><%= sort_link @q_user, :id, "#ID",class: "text-decoration-none" %></th>
        <th scope="col"><%= sort_link @q_user, :name, class: "text-decoration-none" %></th>
        <th scope="col"><%= sort_link @q_user, :email, class: "text-decoration-none" %></th>
        <th scope="col"><%= sort_link @q_user, :role, class: "text-decoration-none" %></th>
        <th scope="col"><%= sort_link @q_user, :updated_at, "Status", class: "text-decoration-none" %></th>
        <th scope="col"><%= sort_link @q_user, :confirmed_at, "Confirmed",class: "text-decoration-none" %></th>
        <th scope="col"><%= sort_link @q_user, :last_sign_in_at, class: "text-decoration-none" %></th>
        <th scope="col"><%= sort_link @q_user, :created_at, class: "text-decoration-none" %></th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <%= render @users %>
    </tbody>
  </table>
</div>
