<% provide :title, "Collections event" %>
<div class="mb-4 row">
  <h2 class="col-8">
    Collections event
  </h2>
  <div class="col">
    <div class="float-end">
      <%= link_to "Create topic", new_admin_event_path,
        class:"btn btn-primary mx-3", remote: true %>
    </div>
  </div>
</div>
<div class="my-3 overflow-auto">
  <table class="table table-striped table-hover shadow border">
    <thead>
      <tr>
        <th scope="col"><%= sort_link @q, :id, "#ID",class: "text-decoration-none" %></th>
        <th scope="col"><%= sort_link @q, :user_id, class: "text-decoration-none" %></th>
        <th scope="col"><%= sort_link @q, :name, "Event name", class: "text-decoration-none" %></th>
        <th scope="col"><%= sort_link @q, :progress, class: "text-decoration-none" %></th>
        <th scope="col">Number of tasks</th>
        <th scope="col"><%= sort_link @q, :topic_name, "Topic", class: "text-decoration-none" %></th>
        <th scope="col"><%= sort_link @q, :location, class: "text-decoration-none" %></th>
        <th scope="col"><%= sort_link @q, :happen_at, class: "text-decoration-none" %></th>
        <th scope="col"><%= sort_link @q, :created_at, class: "text-decoration-none" %></th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <%= render @events %>
    </tbody>
  </table>
</div>
