<%= link_to event_task_path(event_id: @event || 1, id: sub_task), class:"list-group-item list-group-item-action", 
  "aria-current":"true", remote: true do %>
  <div class="d-flex w-100 justify-content-between align-items-center">
    <div class="col-3 fw-bold"><%= sub_task.id.to_s + "-" + sub_task.name %></div>
    <div class="col-7"><%= render "progress", task: sub_task %></div>
    
    <small class="col-2 ps-3"><%= time_ago_in_words sub_task.created_at %></small>
  </div>
<% end %>
